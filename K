<?php
$con = new mysqli('localhost', 'root', '', 'saker');

if ($con->connect_error) {
    die("Connection failed: " . $con->connect_error);
}

// Fetch data and comments from the database
$sql = "SELECT data.*, comments.kommentarikt FROM `data`
        LEFT JOIN comments ON data.id = comments.case_id
        ORDER BY data.id DESC";
$result = $con->query($sql);

// Close the database connection
$con->close();
?>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Submitted Cases</title>
    <!-- The rest of your styling and head content -->
</head>
<body>

    <h2>Submitted Cases</h2>

    <?php
    if ($result->num_rows > 0) {
        echo "<table>";
        echo "<tr><th>ID</th><th>Email</th><th>Name</th><th>Class</th><th>Comments</th></tr>";

        while ($row = $result->fetch_assoc()) {
            echo "<tr>";
            echo "<td>{$row['id']}</td>";
            echo "<td>{$row['epost']}</td>";
            echo "<td>{$row['navnogetternavn']}</td>";
            echo "<td>{$row['klasse']}</td>";
            echo "<td>";

            // Display existing comments
            if (!empty($row['kommentarikt'])) {
                echo "<ul>";
                echo "<li>{$row['kommentarikt']}</li>";
                echo "</ul>";
            }

            // Add textarea for new comment
            echo "<textarea id='comment_{$row['id']}'></textarea><br>";
            echo "<button onclick='saveComment({$row['id']})'>Save Comment</button>";
            
            echo "</td>";
            echo "</tr>";
        }

        echo "</table>";
    } else {
        echo "<p>No cases found</p>";
    }
    ?>

    <script>
        function saveComment(id) {
            var comment = document.getElementById('comment_' + id).value;

            // Send the comment data to the server (you need to implement this part using AJAX or form submission)
            // For simplicity, I'm just logging the comment to the console here
            console.log('Comment for Case ' + id + ': ' + comment);

            // Update the UI to show the new comment (you might use AJAX to update the database and fetch updated data)
            var ul = document.createElement('ul');
            var li = document.createElement('li');
            li.appendChild(document.createTextNode(comment));
            ul.appendChild(li);

            var commentsContainer = document.querySelector('td #comment_' + id);
            commentsContainer.innerHTML = '';
            commentsContainer.appendChild(ul);
        }
    </script>

</body>
</html>
